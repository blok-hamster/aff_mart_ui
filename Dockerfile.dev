# Development Dockerfile for React/Vite frontend with hot reloading

FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install curl for health checks
RUN apk add --no-cache curl

# Create non-root user for security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S frontend -u 1001

# Copy package files
COPY package*.json ./

# Install all dependencies (including devDependencies for development)
RUN npm ci

# Change ownership of the app directory
RUN chown -R frontend:nodejs /app

# Switch to non-root user
USER frontend

# Copy source code (this will be overridden by volume mounts in development)
COPY --chown=frontend:nodejs . .

# Expose port
EXPOSE 3002

# Start development server with hot reloading
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3002"]