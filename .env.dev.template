# Frontend Environment Variables Template for Development
# Copy this file to .env and fill in the values

# API Configuration (Docker Compose)
VITE_API_URL=http://localhost:3004/api/v1
VITE_API_BASE_URL=http://localhost:3004/api/v1

# App Configuration
VITE_APP_NAME=Partner IQ
VITE_APP_VERSION=1.0.0

# Authentication Configuration
VITE_TOKEN_REFRESH_INTERVAL=840000
VITE_SESSION_TIMEOUT=900000

# Feature Flags
VITE_ENABLE_MFA=true
VITE_ENABLE_ANALYTICS=true

# Development Configuration
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# External Services (development/sandbox)
VITE_PAYPAL_CLIENT_ID=your-paypal-sandbox-client-id
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-publishable-key

# Analytics (development)
VITE_GOOGLE_ANALYTICS_ID=your-dev-ga-id
VITE_HOTJAR_ID=your-dev-hotjar-id